@model Beer
<h2>Delete Beer</h2>
<h3>Are you sure you want to delete this?</h3>
<div class="mt-50">
    <h4>@Model.Name</h4>
    <p>ABV: @Model.Abv%</p>
    <p>Style: @Model.Style.Name</p>
</div>
<form asp-controller="Beers" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" />
    <a href="/Beers/Index">Cancel</a>
</form>
