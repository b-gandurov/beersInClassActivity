
@{
    var isAuthenticated = Context.Session.Keys.Contains("CurrentUser");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BeerOverflow - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="nav-links">
            <h3>
                <a href="/Home">Home</a>
                | <a href="/Beers">Beers</a>
                | <a href="/Home/About">About</a>
                | <a href="/Beers/Create">Create</a>
                |
                @{
                    if (isAuthenticated)
                    {
                        <a href = "/Authentication/Logout" > Logout </a>

                    }
                    else
                    {
                        <a href="/Authentication/Login">Login</a>
                        
                    }
                    }
                    

                
            </h3>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <small>©️ Copyright 2024, BeerOverflow</small>
    </footer>
</body>
</html>
